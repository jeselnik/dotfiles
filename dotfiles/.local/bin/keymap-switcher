#!/bin/bash

# I listen to a bunch of Ukrainian/Belarusian/Russian language music and spotify
# search doesn't work with transliterations.

. ~/.local/lib/bemenu-opts

layouts="\
ğŸ‡ºğŸ‡¸
ğŸ‡ºğŸ‡¦
ğŸ‡·ğŸ‡º
"
choice=$(printf "%s" "$layouts" | bemenu -p "âŒ¨ï¸")
cmd=(sway input '*' xkb_layout)

case "$choice" in
  "ğŸ‡ºğŸ‡¸") "${cmd[@]}" "us" ;;
  # 'v' needs to be 'Ğ²', 'Ğ¶' is just unnatural to me
  "ğŸ‡ºğŸ‡¦") "${cmd[@]}" "ua(homophonic)" ;;
  "ğŸ‡·ğŸ‡º") "${cmd[@]}" "ru(phonetic_YAZHERTY)" ;;
esac
